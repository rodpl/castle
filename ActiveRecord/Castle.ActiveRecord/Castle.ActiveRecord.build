<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="Castle.ActiveRecord"
	default="build"
	xmlns="http://nant.sf.net/release/0.85-rc4/nant.xsd"
>

	<property name="root.dir" value="../.." />
	<include buildfile="${root.dir}/common-project.xml" />

	<target name="init" depends="common.init">
		<property name="assembly.version" value="0.0.1.3" />
		<property name="assembly.description" value="An implementation of the ActiveRecord pattern for .NET" />

		<fileset id="project.sources">
			<include name="${src.dir}/**/*.cs" />
		</fileset>

		<assemblyfileset id="project.references" basedir="${build.dir}">
			<include name="NHibernate.dll" />
			<include name="Nullables.dll" 				if="${framework::get-target-framework()=='net-1.1'}" />
			<include name="Nullables.NHibernate.dll"	if="${framework::get-target-framework()=='net-1.1'}" />
			<include name="log4net.dll" />
			<include name="Iesi.Collections.dll" />
			<include name="HashCodeProvider.dll" />
			<include name="Castle.Core.dll" />
			<include name="Castle.DynamicProxy.dll" />
		</assemblyfileset>
	</target>

	<target name="generate-assemblyinfo" depends="init common.generate-assemblyinfo" />

	<target name="build" description="Build ${project::get-name()}" depends="generate-assemblyinfo common.compile-dll" />

</project>
