<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
	<class name="Castle.Facilities.NHibernateIntegration.Tests.Blog, Castle.Facilities.NHibernateIntegration.Tests" table="BLOGS">
	
		<id name="Id" column="BLOG_ID" unsaved-value="0">
			<generator class="native" />
		</id>
		<property name="Name" column="NAME" not-null="true" unique="true" />
		<bag name="Items" inverse="true" lazy="true" order-by="DATE_TIME" cascade="all">
			<key column="BLOG_ID" />
			<one-to-many class="Castle.Facilities.NHibernateIntegration.Tests.BlogItem, Castle.Facilities.NHibernateIntegration.Tests" />
		</bag>
	</class>
</hibernate-mapping>

