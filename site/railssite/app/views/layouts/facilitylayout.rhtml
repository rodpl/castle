<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<title>Castle Project
<% if !@page_title.nil? %>
- <%= @page_title %>
<% end %>
</title>
<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1">
<link href="/css/def.css" rel="stylesheet" type="text/css">
</head>

<body class="maincontainer">

<table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tr>
	<td><div class="maintitle">Castle - 
<% if !@subarea.nil? %>
 <%= @subarea %>
<% end %> Facility
</div>
  </td>
  </tr>
  <tr>
	<td>
<% if has_topmenu %>
	<div class="menubar">
    <%= show_topmenu() %>
	</div>
<% end %>
	</td>
  </tr>
  <tr>
	<td>

	<div class="sectiontitle"><%= @main_title %></div>
		
	<table width="100%" border="0" cellspacing="0" cellpadding="0">
	  <tr>
		<td valign="top">
		<div class="maincontent">

		<table width="90%" border="1" cellpadding="2" bordercolorlight="#4D4D4D" bordercolordark="#4D4D4D" cellspacing="0" class="nicetable">
		  <tr>
			<td width="110px">Purpose</td>
			<td><%= @purpose %></td>
		  </tr>
		  <tr>
			<td width="150px">Requires Proxy?</td>
			<td><%= @proxy %></td>
		  </tr>
		  <tr>
			<td width="150px">Works with configuration?</td>
			<td><%= @wconfig %></td>
		  </tr>
		  <tr>
			<td width="150px">Works with attributes?</td>
			<td><%= @wattributes %></td>
		  </tr>
		  <tr>
			<td width="150px">Version</td>
			<td><%= @version %></td>
		  </tr>
		</table>

		<%= @content_for_layout %>

		</div>
		</td>
		<td width="180px" valign="top">
<%= render "rightmenu" %>
		</td>
	  </tr>
	</table>
	</td>
  </tr>
  <tr>
    <td colspan="2" class="innercontent" align="center">
    <table border="0" width="90%">
      <tr>
        <td class="innercontent" align="center">
        Site powered by <br><a href="http://www.rubyonrails.org">Ruby on Rails</a>
        </td>
        <td class="innercontent" align="center">
        Infrastructure by<br>
        <a href="http://sourceforge.net">
        <img src="http://sourceforge.net/sflogo.php?group_id=124416&amp;type=1" width="88" height="31" border="0" alt="SourceForge.net Logo" />
        </a>
        </td>
      </tr>
    </table>
    </td>
  </tr>
</table>


</body>
</html>
